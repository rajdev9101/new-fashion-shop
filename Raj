<script>
let gallery = document.getElementById("gallery");

function uploadPhoto() {
  let file = document.getElementById("photoInput").files[0];
  let desc = document.getElementById("descInput").value;
  let mrp = document.getElementById("mrpInput").value;

  if (!file) { alert("Please select a photo!"); return; }

  let reader = new FileReader();
  reader.onload = function(e) {
    let card = document.createElement("div");
    card.className = "card";
    card.innerHTML = `
      <img src="${e.target.result}" alt="Cloth">
      <div class="desc">${desc || "No description"}</div>
      <p><b>MRP:</b> ‚Çπ${mrp || "N/A"}</p>
      <div class="actions">
        <span class="like" onclick="toggleLike(this)">‚ù§Ô∏è</span>
        <button onclick="contact()">Contact</button>
      </div>
      <div class="comments">
        <input type="text" placeholder="Write a comment..." onkeydown="postComment(event,this)">
      </div>
    `;
    gallery.prepend(card);
  };
  reader.readAsDataURL(file);
}

function toggleLike(el) {
  el.classList.toggle("liked");
}

function contact() {
  alert("Contact us via WhatsApp: +91XXXXXXXXXX or Instagram: @yourfashionid");
}

function postComment(event, input) {
  if (event.key === "Enter" && input.value.trim() !== "") {
    let p = document.createElement("p");
    p.textContent = input.value;
    let del = document.createElement("span");
    del.textContent = "‚ùå";
    del.className = "delete";
    del.onclick = function(){ p.remove(); }
    p.appendChild(del);
    input.parentElement.appendChild(p);
    input.value = "";
  }
}
</script>

